{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Timeline Studio",
  "version": "0.0.1",
  "identifier": "com.timeline.dev",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run next build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Timeline Studio",
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "maximized": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
