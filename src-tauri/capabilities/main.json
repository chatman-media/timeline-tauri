{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-open",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-stat",
    "core:path:default",
    "dialog:default"
  ]
}
